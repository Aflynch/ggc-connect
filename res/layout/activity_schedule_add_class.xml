<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:padding="5dp"
    tools:context=".ScheduleAddClass" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/name_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_schedule_add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/schedule_add_name_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edittext_schedule_add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="text"
                android:layout_weight="1"
                android:ems="10" >

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/start_time_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_schedule_add_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview_schedule_add_start_time"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/btn_schedule_add_select_start_time"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_scehdule_add_start_time" />

        </TableRow>

        <TableRow
            android:id="@+id/end_time_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_schedule_add_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview_schedule_add_end_time"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/btn_schedule_add_end_time"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_schedule_add_end_time" />

        </TableRow>

        <TableRow
            android:id="@+id/days_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_schedule_add_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview_schedule_add_days"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/chk_schedule_add_monday"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/chk_schedule_add_monday" />

            <CheckBox
                android:id="@+id/chk_schedule_add_tuesday"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/chk_schedule_add_tuesday" />

            <CheckBox
                android:id="@+id/chk_schedule_add_wednesday"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/chk_schedule_add_wednesday" />

            <CheckBox
                android:id="@+id/chk_schedule_add_thursday"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/chk_schedule_add_thursday" />

        </TableRow>

        <TableRow
            android:id="@+id/second_days_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/chk_schedule_add_friday"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="@string/chk_schedule_add_friday" />

            <CheckBox
                android:id="@+id/chk_schedule_add_saturday"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/chk_schedule_add_saturday" />

        </TableRow>

        <TableRow
            android:id="@+id/building_location_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_schedule_add_building_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview_schedule_add_building_location"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinner_schedule_add_building_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/buildings"
                android:prompt="@array/buildings" />

        </TableRow>

        <TableRow
            android:id="@+id/room_location_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

    </TableLayout>

</ScrollView>